<header>
    {{>logo}}
    {{>menu}}
</header>
<section class="userspace-block">

    <section class="user-area">
        <section class="dashboard">
            {{!-- User Header Area --}}
            <h3>
                Hello {{user.fname}},
            </h3>
            
            {{!-- User Documents --}}
            <section class="user-docs">

                    {{>single-use-link this}}
                    
                    <a href="/upload">Upload New Document</a>

                    <h3>Select the documents to share a link to:</h3>
                    <div class="ul-wrapper">
                        <div class="collection">
                            {{#each user.records}}
                                <a 
                                href="#!" 
                                data-id="{{this._id}}"
                                onclick="addToTransfer('{{this._id}}')" 
                                class="collection-item">
                                    {{this.user_filename}}
                                </a>
                            {{/each}}
                        </div>

                    </div>
                    <button class="get-transfer-link clear" onclick="getDocLink()">Get single use link</button>
                    
            </section>
        </section>
    </section>

</section>
{{!-- Footer Area --}}
{{>footer this}}