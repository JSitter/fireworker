<section class="signup-block">
   {{>logo}}
    <h2>Sign Up</h1>
    <h3>Now for only $1200 per month</h3>
    <form action="/signup" class="signup" method="post">
        <label for="fname">First Name</label>
        <input type="text" name="fname"><br>
        <label for="lname">Last Name</label>
        <input type="text" name="lname"><br>
        <label for="email">Email Address</label>
        <input type="text" name="email"><br>
        <label for="password">Password</label>
        <input type="password" name="password"><br>
        <label for="verify-passwd">Verify Password</label>
        <input type="password" name="verify-passwd"><br>
        <button value="submit">Signup</button>
    </form>
</section>